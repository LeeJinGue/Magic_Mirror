<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="appbarTitle">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18pt</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--    ~를 해주세요 하는 안내 멘트를 위한 텍스트 스타일-->
    <style name="guideStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14pt</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="btnStyle">
        <item name="android:textColor">#6C92F4</item>
        <item name="android:textSize">10pt</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>

    <!--    어떤 정보를 입력하기 위한 힌트 텍스트 스타일-->
    <style name="hintStyle">
        <item name="android:textSize">12pt</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
    </style>
    <style name="colorMainBg">#0D1AE9E3</style>


    <style name="Theme.SmartMirror" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>