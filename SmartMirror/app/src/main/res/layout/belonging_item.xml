<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:background="@color/bgColor"
    android:id="@+id/belongingItemLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/belongingNameAndBtns"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textAppearance="@style/scheduleTitle"
            android:id="@+id/belongingName"
            android:text="소지품명"></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/belongingDelBtn"
            android:src="@drawable/ic_add_24"
            android:layout_centerVertical="true"
            android:id="@+id/belongingAddBtn"></ImageView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_remove_24"
            android:id="@+id/belongingDelBtn"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            ></ImageView>

    </RelativeLayout>

</LinearLayout>